  },
  {
    title: "Built conversational experience at",
    company: "stoqs",
    role: "Founding Team & Product Designer",
    period: "May, 2024- Jan, 2025",
    location: "Remote"
  },
  {
    title: "Experimented with prototypes at",
    company: "oronium",
    role: "Product Designer- Part time",
    period: "Aug, 2022- Aug, 2024",
    location: "Hybrid, Trivandrum"
  },
  {
    title: "Wore all hats of design at",
    company: "Christin&Co.",
    role: "Design Consultant- Freelance",
    period: "May 2021- Jan, 2025",
    location: "Hybrid, Trivandrum"
