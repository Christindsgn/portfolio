        <a href="https://docs.google.com/document/d/1K9sSmVzkHgUhoMhXxsFZ_w56_WfNpaqPKLkZtZT_i64/edit?usp=sharing" class="nav-resume-link text-[16px] leading-[24px] no-underline !text-black hover:text-[#0079CA] hover:underline transition-all">
          View Resume
        </a>
      </nav>

      {/* Header Section */}
      <header class="text-center mb-24">
        {/* 1. Intro text with lines */}
        <div class="grid h-[32px] grid-cols-[1fr_auto_1fr] items-center space-x-8 mb-[32px]">
          <div class="h-[1px] bg-[rgba(0,0,0,0.1)]"></div>
          <p class="text-base leading-6 font-normal whitespace-nowrap px-[8px]">Hey there, I'm Christin</p>
          <div class="h-[1px] bg-[rgba(0,0,0,0.1)]"></div>
        </div>
        
        {/* 2. Main heading */}
        <h1 class="font-[400] text-heading-base md:text-heading-md mb-[40px] mx-auto max-w-4xl text-center tracking-[-1px]">
          I take broad, conceptual ideas and turn them into something useful and&nbsp;valuable.
        </h1>
        
        {/* 3. Paragraph and image container */}
        <div class="header-container">
          <p class="header-text">
            I'm a product designer with 3 yoe, built and experimented multiple 0 â†’ 1 products 
            and ideas with early stage startups and founders, taking my product, tech and 
            business knowledge into elevating product experiences that creates business.
          </p>
          <img 
            src="/images/Header image.png" 
            alt="Header Image" 
            class="w-[200px] h-[200px] object-cover rounded-full"
          />
        </div>
      </header>

      {/* Work Section */}
      <section>
         <div class="grid  grid-cols-[1fr_auto_1fr] items-center space-x-8 mb-[32px]">
          <div class="h-[1px] bg-[rgba(0,0,0,0.1)]"></div>
          <p class="text-base leading-6 font-normal whitespace-nowrap p-[8px]">Work</p>
          <div class="h-[1px] bg-[rgba(0,0,0,0.1)]"></div>
        </div>
        <div class="md:mx-[32px] flex-row justify-center">
          {workExperience.map((work) => (
            <div class="group sm:mb-[64px] mb-[40px]">
              <h3 class="text-center font-[400] m-[0px] text-[#C0C3C7]">
                {work.title.split(' ').map((word, i, arr) => {
                  if (i === arr.length - 1) {
                    return `\u00A0${word}`;
                  }
                  return ` ${word}`;
                })}
              </h3>
              <h4 class="text-center m-[0px] font-[400] tracking-[-.80px] mb-[16px]">
                {work.company}
              </h4>
              <div class="text-[16px] text-center leading-[28px] text-[#62686B]">
                {work.period} / <span class="font-[600]">{work.role}</span> / {work.location}
              </div>
            </div>
          ))}
        </div>
      </section>

      {/* Contact Section */}
      <section class="mt-[144px] mb-[144px]">
        <div class="grid h-[32px] grid-cols-[1fr_auto_1fr] items-center space-x-8 mb-[32px]">
          <div class="h-[1px] bg-[rgba(0,0,0,0.1)]"></div>
          <p class="text-base leading-6 font-normal whitespace-nowrap px-[8px]">Contacts</p>
          <div class="h-[1px] bg-[rgba(0,0,0,0.1)]"></div>
        </div>

        <div class="text-center">
          <div class="mb-[32px]">
            <p class="text-[16px] leading-[24px] text-[#62686B]">Email</p>
            <a href="mailto:christin@gmail.com" class="email-heading text-[#0079CA] font-[400] tracking-[-1px] hover:text-[rgba(0,0,0,0.7)] transition-colors whitespace-nowrap block">
              christinsibi333@gmail.com
            </a>
          </div>

          <div>
            <p class="text-[16px] leading-[24px] text-[#0079CA] mt-[64px]">
              <a href="https://linkedin.com/in/christinsibi" class=" px-[24px] no-underline text-[#0079CA] hover:text-black transition-colors">LinkedIn</a>
           
              <a href="https://dribbble.com/christinsibi" class=" px-[24px] no-underline text-[#0079CA] hover:text-black transition-colors">Dribbble</a>
             
              <a href="https://behance.net/christinsibi" class="px-[24px] no-underline text-[#0079CA] hover:text-black transition-colors">Behance</a>
            </p>
          </div>
        </div>
      </section>
  </main>
</Layout>

<style>
  :root {
    --heading-size: 64px;
    --heading-line-height: 68px;
    --max-width: 1640px;
  }

  html {
    scroll-behavior: smooth;
    overflow-x: hidden;
  }

  body {
    overflow-x: hidden;
    position: relative;
    min-height: 100vh;
    margin: 0;
    padding: 0;
  }

  .main-container {
    padding-left: 16px;
    padding-right: 16px;
    margin: 0 auto;
    max-width: var(--max-width);
    width: 100%;
    position: relative;
  }

  @media (min-width: 800px) {
    .main-container {
      padding-left: 12vw;
      padding-right: 12vw;
    }
  }

  @media (min-width: 1640px) {
    .main-container {
      padding-left: 260px;  /* 16vw of 1640px = 196px */
      padding-right: 260px;
    }
  }

  .header-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 24px;
    margin-bottom: 32px;
    width: 100%;
    margin-left: auto;
    margin-right: auto;
  }

  @media (min-width: 800px) {
    .header-container {
      margin-left: auto;
      margin-right: auto;
    }
  }

  @media (min-width: 1280px) {
    .header-container {
      width: 80%;
    }
  }

  .header-text {
    max-width: 100%;
    font-size: 20px;
    text-align: center;
    line-height: 28px;
  }

  @media (min-width: 1100px) {
    .header-container {
      flex-direction: row;
      gap: 64px;
    }
    .header-text {
      text-align: left;
      max-width: none;
    }
  }

  .email-heading {
    font-size: 24px;
    line-height: 32px;
  }

  @media (min-width: 800px) {
    .email-heading {
      font-size: 48px;
      line-height: 48px;
    }
  }

  @media (min-width: 1100px) {
    .email-heading {
      font-size: 64px;
      line-height: 64px;
    }
  }

  @media (max-width: 1099px) {
    :root {
      --heading-size: 48px;
      --heading-line-height: 48px;
    }
    .header-text {
      margin-bottom: 0;
    }
  }

  @media (max-width: 800px) {
    .header-container {
      margin-left: 0;
      margin-right: 0;
    }
    h1 {
      margin-left: 0;
      margin-right: 0;
    }
  }

  @media (max-width: 640px) {
    :root {
      --heading-size: 32px;
      --heading-line-height: 36px;
    }
    .header-text {
      font-size: 16px;
      line-height: 24px;
    }
    .text-base {
      font-size: 14px;
      line-height: 20px;
    }
    .text-[20px] {
      font-size: 16px !important;
      line-height: 24px !important;
    }
    .text-[16px] {
      font-size: 14px !important;
      line-height: 20px !important;
    }
  }

  h1, h3, h4, .big-text {
    font-size: var(--heading-size);
    line-height: var(--heading-line-height);
  }

  h1, h2, h3, h4 {
    font-feature-settings: "ss01", "ss02", "ss03";
  }
  
  text {
    font-feature-settings: "ss01", "ss02", "ss03";
  }

  /* Global font styles */
  :root {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Inter', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  }

  .nav-resume-link {
    color: black;
  }
  
  .nav-resume-link:hover {
    color: #0079CA;
  }

  .nav-resume-link:active {
    color: #005791;
  }

  /* Animation keyframes */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Animation classes */
  .animate-content {
    opacity: 0;
    animation: fadeInUp 0.6s ease forwards;
    will-change: transform, opacity;
  }

  /* Staggered delays for different sections */
  nav {
    animation-delay: 300ms;
  }

  header .grid {
    animation-delay: 450ms;
  }

  header h1 {
    animation-delay: 600ms;
  }

  .header-container {
    animation-delay: 750ms;
  }

  /* Work section animations */
  section:first-of-type .grid {
    animation-delay: 900ms;
  }

  .group {
    opacity: 0;
    animation: fadeInUp 0.6s ease forwards;
  }

  .group:nth-child(1) {
    animation-delay: 1050ms;
  }

  .group:nth-child(2) {
    animation-delay: 1200ms;
  }

  .group:nth-child(3) {
    animation-delay: 1350ms;
  }

  .group:nth-child(4) {
    animation-delay: 1500ms;
  }

  /* Contact section animations */
  section:last-of-type {
    opacity: 0;
    animation: fadeInUp 0.6s ease forwards;
    animation-delay: 1650ms;
  }

  section:last-of-type .grid {
    opacity: 0;
    animation: fadeInUp 0.6s ease forwards;
    animation-delay: 1800ms;
  }

  section:last-of-type .text-center {
    opacity: 0;
    animation: fadeInUp 0.6s ease forwards;
    animation-delay: 1950ms;
  }
</style>

<script>
  // Handle initial scroll position and animations
  document.addEventListener('DOMContentLoaded', () => {
    // Force scroll to top immediately
    window.scrollTo(0, 0);
    
    // Add a small delay before adding animation classes
    setTimeout(() => {
      const elements = document.querySelectorAll('nav, header .grid, header h1, .header-container, section, section .grid, .group, section:last-of-type .text-center');
      elements.forEach(element => {
        element.classList.add('animate-content');
      });
    }, 100);
  });

  // Additional check for scroll position
  window.addEventListener('load', () => {
    window.scrollTo(0, 0);
  });
</script>
